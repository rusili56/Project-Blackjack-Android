<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="110dp"
    android:layout_height="160dp"
    >

    <TextView
        android:id="@+id/idtvBackNum"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text=""
        android:textSize="200sp"
        android:textColor="#F1F1F1"
        android:layout_marginLeft="-20dp"
        android:layout_marginTop="-10dp"
        />
    <TextView
        android:id="@+id/idtvBackNum2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text=""
        android:textSize="200sp"
        android:textColor="#F1F1F1"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="-10dp"
        />
<RelativeLayout
    android:id="@+id/idbackground"
    android:background="#80FFFFFF"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    >

    <RelativeLayout
        android:id="@+id/llLeftColumn"
        android:layout_width="25dp"
        android:layout_height="match_parent"
        android:paddingTop="10dp"
        >
        <TextView
            android:id="@+id/idtvLeftNum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#606060"
            android:textSize="20sp"
            android:gravity="center"
            />
        <ImageView
            android:id="@+id/idivLeftSuit"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:foregroundGravity="top"
            android:layout_below="@+id/idtvLeftNum"
            android:layout_alignParentStart="true"
            android:src="@drawable/club_temp"
            />
    </RelativeLayout>


    <RelativeLayout
        android:orientation="horizontal"
        android:id="@+id/llMiddleColumn"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/llLeftColumn">
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/llRightColumn"
        android:layout_width="25dp"
        android:layout_height="match_parent"
        android:paddingBottom="10dp"
        android:layout_toRightOf="@id/llMiddleColumn"
        >

        <TextView
            android:id="@+id/idtvRightNum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#606060"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            />
        <ImageView
            android:id="@+id/idivRightSuit"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_above="@id/idtvRightNum"
            android:foregroundGravity="bottom"
            android:src="@drawable/club_temp"
            />
    </RelativeLayout>


</RelativeLayout>
</FrameLayout>
